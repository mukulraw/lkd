<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lkd.loankarado">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.lkd.loankarado.Bean"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.lkd.loankarado.OTP"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lkd.loankarado.Login"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lkd.loankarado.PropertySelf"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lkd.loankarado.HomeSelf"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lkd.loankarado.PropertySalaried"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lkd.loankarado.HomeSalaried"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lkd.loankarado.Business"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lkd.loankarado.Personal"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lkd.loankarado.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lkd.loankarado.MainActivity"
            android:screenOrientation="portrait" />

        <service
            android:name=".MyFirebaseMessagingService"
            android:permission="">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/logo" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />
        <!--
 Set custom default icon. This is used when no icon is set for incoming notification messages.
     See README(https://goo.gl/l4GJaQ) for more.
        -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

    </application>

</manifest>